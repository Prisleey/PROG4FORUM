<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastroUserServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controllers.CadastroUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUserServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controllers.LoginUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controllers.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoffServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controllers.LogoffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroAssuntoServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controllers.CadastroAssuntoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroUserServlet</servlet-name>
        <url-pattern>/CadastroUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUserServlet</servlet-name>
        <url-pattern>/LoginUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoffServlet</servlet-name>
        <url-pattern>/Logoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroAssuntoServlet</servlet-name>
        <url-pattern>/CadastroAssunto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
